<parameters>
	<parameter name="ApplicationPath" description="Full site path where you would like to install your application (i.e., Default Web Site/SplendidCRM)" defaultValue="Default Web Site/SplendidCRM" tags="iisapp">
		<parameterEntry type="ProviderPath" scope="iisapp" match="SplendidCRM" /> 
	</parameter>

	<parameter name="SetAcl0" description="Automatically sets write access for the app" defaultValue="{ApplicationPath}" tags="hidden">
		<parameterEntry type="ProviderPath" scope="setAcl" match="SplendidCRM" /> 
	</parameter>

	<parameter name="SetAcl1" description="Automatically sets write access for the app" defaultValue="{ApplicationPath}/Web.config" tags="hidden">
		<parameterEntry type="ProviderPath" scope="setAcl" match="SplendidCRM/Web.config" /> 
	</parameter>

	<parameter name="SetAcl2" description="Automatically sets write access for the app" defaultValue="{ApplicationPath}/App_Data" tags="hidden">
		<parameterEntry type="ProviderPath" scope="setAcl" match="SplendidCRM/App_Data" /> 
	</parameter>

	<parameter name="DatabaseServer" defaultValue="(local)\SQLEXPRESS" tags="SQL, dbServer" />

	<parameter name="DatabaseName" defaultValue="SplendidCRM" tags="SQL, dbName">
		<parameterEntry type="TextFile" scope="CreateLogin.sql" match="PlaceholderForDbName" />
	</parameter>

	<parameter name="DatabaseUsername" defaultValue="Splendid" tags="SQL, dbUsername">
		<parameterEntry type="TextFile" scope="CreateLogin.sql" match="PlaceholderForDbUsername" />
	</parameter>

	<parameter name="DatabasePassword" tags="New, Password, SQL, dbUserPassword" >
		<parameterValidation type="RegularExpression" validationString="(?=^.{8,}$)((?=.*\d)|(?=.*\W+))(?![.\n])(?=.*[A-Z])(?=.*[a-z]).*$"  />
		<parameterEntry type="TextFile" scope="CreateLogin.sql" match="PlaceholderForDbUserPassword"  />
	</parameter>

	<parameter name="ConnectionStringForWebConfig" defaultValue="Server={DatabaseServer};Database={DatabaseName};uid={DatabaseUsername};Pwd={DatabasePassword};" tags="Hidden">
		<parameterEntry type="XmlFile" scope="\\Web.config$" match="//appSettings/add[@key='SplendidSQLServer']/@value" />
	</parameter>

	<parameter name="DatabaseAdministrator" defaultValue="sa" tags="SQL, dbAdminUsername" />

	<parameter name="DatabaseAdministratorPassword" tags="Password, SQL, dbAdminPassword" />

	<parameter name="ConnectionString" defaultValue="Server={DatabaseServer};Database={DatabaseName};uid={DatabaseAdministrator};Pwd={DatabaseAdministratorPassword};" tags="SQL, Hidden, SQLConnectionString, Validate">
		<parameterEntry type="ProviderPath" scope="dbfullsql" match="CreateLogin.sql"  />
		<!-- parameterEntry type="ProviderPath" scope="dbfullsql" match="Build.sql"  / -->
	</parameter>
</parameters>
